                    },
                    {
                        id: 8,
                        name: "Vitamin Supplements",
                        category: "health",
                        description: "Packaging change, 100-pack bottles. Best before Feb 28, 2025.",
                        price: 39.99,
                        originalPrice: 150.00,
                        discount: 73,
                        stock: 300,
                        condition: "New",
                        expiry: "2025-02-28",
                        storage: "Ambient",
                        badges: ["bulk"],
                        image: "💊"
                    }
                ]
            },
            filters: {
                fashion: {
                    category: 'all',
                    price: [],
                    size: [],
                    color: [],
                    condition: []
                },
                fmcg: {
                    category: 'all',
                    expiry: [],
                    storage: []
                }
            },
            currentUser: null
        };

        // ===== DOM ELEMENTS =====
        const elements = {
            cartBtn: document.getElementById('cartBtn'),
            cartModal: document.getElementById('cartModal'),
            cartOverlay: document.getElementById('cartOverlay'),
            cartItems: document.getElementById('cartItems'),
            cartTotal: document.getElementById('cartTotal'),
            cartCount: document.getElementById('cartCount'),
            searchInput: document.getElementById('searchInput'),
            nav: document.getElementById('nav'),
            mobileMenuBtn: document.getElementById('mobileMenuBtn'),
            notification: document.getElementById('notification'),
            fashionProducts: document.getElementById('fashionProducts'),
            fmcgProducts: document.getElementById('fmcgProducts'),
            sellModal: document.getElementById('sellModal'),
            sellOverlay: document.getElementById('sellOverlay')
        };

        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', () => {
            init();
        });

        function init() {
            // Initialize product displays
            renderFashionProducts();
            renderFMCGProducts();
            
            // Update cart display
            updateCartDisplay();
            
            // Initialize event listeners
            initEventListeners();
            
            // Initialize animations
            initAnimations();
            
            // Initialize counters
            initCounters();
            
            // Load user data
            loadUserData();
        }

        function initEventListeners() {
            // Cart
            elements.cartBtn.addEventListener('click', openCart);
            elements.cartOverlay.addEventListener('click', closeCart);
            
            // Mobile menu
            elements.mobileMenuBtn.addEventListener('click', toggleMobileMenu);
            
            // Search
            elements.searchInput.addEventListener('input', handleSearch);
            
            // Category tabs
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const category = btn.dataset.category;
                    state.filters.fashion.category = category;
                    renderFashionProducts();
                });
            });
            
            // Filter checkboxes
            document.querySelectorAll('.filter-option').forEach(option => {
                option.addEventListener('click', () => {
                    const checkbox = option.querySelector('.filter-checkbox');
                    checkbox.classList.toggle('checked');
                    
                    const filter = option.dataset.filter;
                    const value = option.dataset.value;
                    
                    if (checkbox.classList.contains('checked')) {
                        if (!state.filters.fashion[filter].includes(value)) {
                            state.filters.fashion[filter].push(value);
                        }
                    } else {
                        state.filters.fashion[filter] = state.filters.fashion[filter].filter(v => v !== value);
                    }
                    
                    renderFashionProducts();
                });
            });
            
            // Form submissions
            document.getElementById('sellForm')?.addEventListener('submit', handleSellForm);
            
            // Scroll events
            window.addEventListener('scroll', handleScroll);
            
            // Keyboard shortcuts
            document.addEventListener('keydown', handleKeyboard);
        }

        // ===== PRODUCT RENDERING =====
        function renderFashionProducts() {
            const container = elements.fashionProducts;
            const products = filterProducts(state.products.fashion, state.filters.fashion);
            
            container.innerHTML = products.map(product => `
                <div class="product-card" data-id="${product.id}">
                    <div class="product-badges">
                        ${product.badges.map(badge => `
                            <span class="badge ${badge === 'bulk' ? 'badge-accent' : badge === 'sample' ? 'badge-warning' : 'badge-primary'}">
                                ${badge === 'bulk' ? 'Bulk' : badge === 'sample' ? 'Sample' : 'New'}
                            </span>
                        `).join('')}
                    </div>
                    <div class="product-image">
                        <div style="font-size: 3rem;">${product.image}</div>
                    </div>
                    <div class="product-content">
                        <div class="product-category">${product.category.toUpperCase()}</div>
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                        <div class="product-price">
                            <span class="price-original">$${product.originalPrice.toFixed(2)}</span>
                            <span class="price-current">$${product.price.toFixed(2)}</span>
                            <span class="price-discount">${product.discount}% OFF</span>
                        </div>
                        <div class="product-meta">
                            <div class="product-stock">
                                <i class="fas fa-box"></i>
                                <span>${product.stock} units</span>
                            </div>
                            <div class="product-condition">
                                <i class="fas fa-tag"></i>
                                <span>${product.condition}</span>
                            </div>
                        </div>
                        <div class="product-actions">
                            <button class="btn btn-primary btn-sm" onclick="addToCart(${product.id})">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                            <button class="btn btn-outline btn-sm" onclick="viewProduct(${product.id})">
                                <i class="fas fa-eye"></i> View
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function renderFMCGProducts() {
            const container = elements.fmcgProducts;
            
            container.innerHTML = state.products.fmcg.map(product => `
                <div class="product-card fmcg-card" data-id="${product.id}">
                    <div class="product-badges">
                        <span class="badge ${product.badges.includes('expiring') ? 'badge-warning' : 'badge-primary'}">
                            ${product.badges.includes('expiring') ? 'Expiring Soon' : 'New'}
                        </span>
                    </div>
                    <div class="product-image">
                        <div style="font-size: 3rem;">${product.image}</div>
                    </div>
                    <div class="product-content">
                        <div class="expiry-info">
                            <div class="expiry-date">
                                <i class="fas fa-calendar-alt"></i>
                                Best Before: ${formatDate(product.expiry)}
                            </div>
                        </div>
                        <div class="product-category">${product.category.toUpperCase().replace('-', ' ')}</div>
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                        <div class="product-price">
                            <span class="price-original">$${product.originalPrice.toFixed(2)}</span>
                            <span class="price-current">$${product.price.toFixed(2)}</span>
                            <span class="price-discount">${product.discount}% OFF</span>
                        </div>
                        <div class="product-meta">
                            <div class="product-stock">
                                <i class="fas fa-box"></i>
                                <span>${product.stock} units</span>
                            </div>
                            <div class="product-condition">
                                <i class="fas fa-warehouse"></i>
                                <span>${product.storage}</span>
                            </div>
                        </div>
                        <div class="product-actions">
                            <button class="btn btn-primary btn-sm" onclick="addToCart(${product.id})">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                            <button class="btn btn-outline btn-sm" onclick="viewProduct(${product.id})">
                                <i class="fas fa-eye"></i> View
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function filterProducts(products, filters) {
            return products.filter(product => {
                // Category filter
                if (filters.category !== 'all' && product.category !== filters.category) {
                    return false;
                }
                
                // Price filter
                if (filters.price.length > 0) {
                    const priceRanges = filters.price.map(range => range.split('-').map(Number));
                    const inPriceRange = priceRanges.some(([min, max]) => {
                        const price = product.price;
                        return price >= min && price <= max;
                    });
                    if (!inPriceRange) return false;
                }
                
                // Size filter
                if (filters.size.length > 0) {
                    if (!filters.size.some(size => product.size.includes(size))) {
                        return false;
                    }
                }
                
                // Color filter
                if (filters.color.length > 0) {
                    if (!filters.color.includes(product.color.toLowerCase())) {
                        return false;
                    }
                }
                
                // Condition filter
                if (filters.condition.length > 0) {
                    const conditionMap = {
                        'new': 'New with tags',
                        'sample': 'Sample',
                        'overrun': 'Overrun'
                    };
                    const conditions = filters.condition.map(c => conditionMap[c]);
                    if (!conditions.includes(product.condition)) {
                        return false;
                    }
                }
                
                return true;
            });
        }

        // ===== CART FUNCTIONALITY =====
        function addToCart(productId) {
            // Find product in all categories
            let product = null;
            for (const category in state.products) {
                product = state.products[category].find(p => p.id === productId);
                if (product) break;
            }
            
            if (!product) return;
            
            // Check if product already in cart
            const existingItem = state.cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                state.cart.push({
                    ...product,
                    quantity: 1
                });
            }
            
            // Save to localStorage
            saveCart();
            
            // Update display
            updateCartDisplay();
            
            // Show notification
            showNotification('Success!', `${product.name} added to cart`);
        }

        function removeFromCart(productId) {
            state.cart = state.cart.filter(item => item.id !== productId);
            saveCart();
            updateCartDisplay();
        }

        function updateCartQuantity(productId, change) {
            const item = state.cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(productId);
                } else {
                    saveCart();
                    updateCartDisplay();
                }
            }
        }

        function updateCartDisplay() {
            // Update cart count
            const totalItems = state.cart.reduce((sum, item) => sum + item.quantity, 0);
            elements.cartCount.textContent = totalItems;
            
            // Update cart modal content
            if (state.cart.length === 0) {
                elements.cartItems.innerHTML = `
                    <div style="text-align: center; padding: 3rem 1rem;">
                        <div style="font-size: 4rem; color: var(--border); margin-bottom: 1rem;">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <h3 style="color: var(--text-secondary); margin-bottom: 0.5rem;">Your cart is empty</h3>
                        <p style="color: var(--text-tertiary);">Add some products to get started!</p>
                    </div>
                `;
                elements.cartTotal.textContent = '$0.00';
                return;
            }
            
            let cartHTML = '';
            let total = 0;
            
            state.cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                cartHTML += `
                    <div class="cart-item">
                        <div class="cart-item-image">
                            <div style="font-size: 2rem; display: flex; align-items: center; justify-content: center; height: 100%;">
                                ${item.image}
                            </div>
                        </div>
                        <div class="cart-item-details">
                            <div class="cart-item-title">${item.name}</div>
                            <div class="cart-item-price">$${item.price.toFixed(2)} each</div>
                            <div class="cart-item-quantity">
                                <button class="quantity-btn" onclick="updateCartQuantity(${item.id}, -1)">-</button>
                                <span>${item.quantity}</span>
                                <button class="quantity-btn" onclick="updateCartQuantity(${item.id}, 1)">+</button>
                                <button class="cart-item-remove" onclick="removeFromCart(${item.id})" style="margin-left: auto;">
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            elements.cartItems.innerHTML = cartHTML;
            elements.cartTotal.textContent = `$${total.toFixed(2)}`;
        }

        function saveCart() {
            localStorage.setItem('stockshift_cart', JSON.stringify(state.cart));
        }

        function checkout() {
            if (state.cart.length === 0) {
                showNotification('Error', 'Your cart is empty!', 'error');
                return;
            }
            
            const total = state.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            showNotification('Success!', `Proceeding to checkout: $${total.toFixed(2)}`);
            
            // In a real app, this would redirect to checkout page
            console.log('Checkout initiated:', state.cart);
            
            // Clear cart after checkout
            state.cart = [];
            saveCart();
            updateCartDisplay();
            closeCart();
        }

        // ===== MODAL FUNCTIONS =====
        function openCart() {
            elements.cartModal.classList.add('active');
            elements.cartOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeCart() {
            elements.cartModal.classList.remove('active');
            elements.cartOverlay.classList.remove('active');
            document.body.style.overflow = '';
        }

        function openSellModal() {
            elements.sellModal.classList.add('active');
            elements.sellOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeSellModal() {
            elements.sellModal.classList.remove('active');
            elements.sellOverlay.classList.remove('active');
            document.body.style.overflow = '';
        }

        function handleSellForm(e) {
            e.preventDefault();
            showNotification('Success!', 'Your seller application has been submitted');
            closeSellModal();
            // In a real app, this would send data to backend
        }

        // ===== ANIMATIONS & EFFECTS =====
        function initAnimations() {
            // Animate hero stats
            animateCounters('.hero-stats .stat-number');
            
            // Animate impact stats
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters('.impact-stats .stat-value');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });
            
            observer.observe(document.querySelector('.impact'));
        }

        function animateCounters(selector) {
            document.querySelectorAll(selector).forEach(element => {
                const target = parseInt(element.dataset.count || element.textContent.replace(/[^0-9.-]+/g, ""));
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;
                
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    
                    if (selector.includes('impact')) {
                        element.textContent = formatNumber(current);
                    } else {
                        element.textContent = formatNumber(Math.floor(current));
                    }
                }, 16);
            });
        }

        function formatNumber(num) {
            if (num >= 1000000) {
                return (num / 1000000).toFixed(1) + 'M';
            }
            if (num >= 1000) {
                return (num / 1000).toFixed(1) + 'K';
            }
            if (num % 1 !== 0) {
                return num.toFixed(1);
            }
            return num.toLocaleString();
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }

        // ===== NOTIFICATIONS =====
        function showNotification(title, message, type = 'success') {
            const notification = elements.notification;
            const icon = notification.querySelector('.notification-icon i');
            const titleEl = document.getElementById('notificationTitle');
            const messageEl = document.getElementById('notificationMessage');
            
            // Set content
            titleEl.textContent = title;
            messageEl.textContent = message;
            
            // Set type
            notification.className = 'notification';
            notification.classList.add(`notification-${type}`);
            notification.classList.add('active');
            
            // Set icon
            icon.className = type === 'error' ? 'fas fa-exclamation-triangle' : 'fas fa-check';
            
            // Auto hide
            setTimeout(() => {
                closeNotification();
            }, 3000);
        }

        function closeNotification() {
            elements.notification.classList.remove('active');
        }

        // ===== NAVIGATION =====
        function toggleMobileMenu() {
            elements.nav.classList.toggle('active');
        }

        function scrollToSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                section.scrollIntoView({ behavior: 'smooth' });
                closeCart();
                elements.nav.classList.remove('active');
            }
        }

        function handleScroll() {
            const header = document.getElementById('header');
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        }

        // ===== SEARCH FUNCTIONALITY =====
        function handleSearch(e) {
            const searchTerm = e.target.value.toLowerCase();
            
            if (searchTerm.length < 2) {
                renderFashionProducts();
                renderFMCGProducts();
                return;
            }
            
            // Search in fashion products
            const filteredFashion = state.products.fashion.filter(product =>
                product.name.toLowerCase().includes(searchTerm) ||
                product.description.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm)
            );
            
            // Search in FMCG products
            const filteredFMCG = state.products.fmcg.filter(product =>
                product.name.toLowerCase().includes(searchTerm) ||
                product.description.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm)
            );
            
            // Update displays
            elements.fashionProducts.innerHTML = filteredFashion.map(product => `
                <div class="product-card">
                    <div class="product-content">
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                    </div>
                </div>
            `).join('');
            
            elements.fmcgProducts.innerHTML = filteredFMCG.map(product => `
                <div class="product-card fmcg-card">
                    <div class="product-content">
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                    </div>
                </div>
            `).join('');
        }

        // ===== USER FUNCTIONALITY =====
        function loadUserData() {
            const savedUser = localStorage.getItem('stockshift_user');
            if (savedUser) {
                state.currentUser = JSON.parse(savedUser);
            }
        }

        function openSellerGuide() {
            showNotification('Info', 'Seller guide will open in a new window');
            // In a real app, this would open a PDF or guide page
        }

        function viewProduct(productId) {
            // Find product
            let product = null;
            for (const category in state.products) {
                product = state.products[category].find(p => p.id === productId);
                if (product) break;
            }
            
            if (product) {
                showNotification('Product View', `Viewing ${product.name}`);
                // In a real app, this would open a product detail page
            }
        }

        // ===== KEYBOARD SHORTCUTS =====
        function handleKeyboard(e) {
            // Ctrl/Cmd + K for search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                elements.searchInput.focus();
            }
            
            // Escape to close modals
            if (e.key === 'Escape') {
                closeCart();
                closeSellModal();
            }
        }

        // ===== UTILITY FUNCTIONS =====
        function initCounters() {
            // Initialize impact counters
            const impactValues = {
                products: 45892,
                waste: 187.45,
                co2: 1245,
                charity: 125.8
            };
            
            document.getElementById('impactProducts').dataset.count = impactValues.products;
            document.getElementById('impactWaste').dataset.count = impactValues.waste;
            document.getElementById('impactCO2').dataset.count = impactValues.co2;
            document.getElementById('impactCharity').dataset.count = impactValues.charity;
        }

        // Make functions available globally
        window.addToCart = addToCart;
        window.removeFromCart = removeFromCart;
        window.updateCartQuantity = updateCartQuantity;
        window.checkout = checkout;
        window.openCart = openCart;
        window.closeCart = closeCart;
        window.openSellModal = openSellModal;
        window.closeSellModal = closeSellModal;
        window.openSellerGuide = openSellerGuide;
        window.viewProduct = viewProduct;
        window.scrollToSection = scrollToSection;
        window.closeNotification = closeNotification;
    </script>
</body>
</html>
