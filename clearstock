    <!-- JavaScript -->
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <script>
        // ===== STATE MANAGEMENT =====
        const state = {
            cart: JSON.parse(localStorage.getItem('stockshift_cart')) || [],
            products: {
