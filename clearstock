                        image: "🥣"
                    },
                    {
                        id: 6,
                        name: "Luxury Hand Soap",
                        category: "personal-care",
                        description: "Discontinued fragrance, 24-pack case. Best before Jan 30, 2025.",
                        price: 18.99,
                        originalPrice: 72.00,
                        discount: 74,
                        stock: 120,
                        condition: "New",
                        expiry: "2025-01-30",
                        storage: "Ambient",
                        badges: ["expiring"],
                        image: "🧴"
                    },
                    {
                        id: 7,
                        name: "Eco-Friendly Detergent",
                        category: "household",
                        description: "Formula update overstock, 48-pack case. Best before Mar 15, 2025.",
                        price: 24.99,
